def add(a,b):
  print (a+b)
  
def sub(a,b):
  print(a-b)
  
def mul(a,b):
  print(a*b)
  
def div(a,b):
  if b == 0:
    print ("Hata Bir Sayı Sıfıra Bölünmez")
  
a=int(input("Zahl1="))
b=int(input("Zahl2"))
operator=input("Operation")
if operator =="+":
   add(a,b)
elif operator=="-":
   sub(a,b)
elif operator=="*":
   mul(a,b)
elif operator=="/":
   div(a,b)
else:
  print("Fehler")
